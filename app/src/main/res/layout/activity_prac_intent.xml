<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracIntentActivity">

    <Button
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConstellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Constellation"
        app:layout_constraintEnd_toEndOf="@+id/btnMain"
        app:layout_constraintStart_toStartOf="@+id/btnMain"
        app:layout_constraintTop_toBottomOf="@+id/btnMain" />

    <Button
        android:id="@+id/btnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/btnConstellation"
        app:layout_constraintStart_toStartOf="@+id/btnConstellation"
        app:layout_constraintTop_toBottomOf="@+id/btnConstellation" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Result"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/btnName"
        app:layout_constraintStart_toStartOf="@+id/btnName"
        app:layout_constraintTop_toBottomOf="@+id/btnName" />
</androidx.constraintlayout.widget.ConstraintLayout>